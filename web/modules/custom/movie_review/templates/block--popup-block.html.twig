<!-- Add you custom twig html here -->
<button style="display: none" id="showModal" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#popup_modal">Open Modal</button>

<!-- Modal -->
<div id="popup_modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <h2>{{ message }}</h2>
            <div class="col-md-12 carousel slide" id="myPopupCarousel" data-ride="carousel">
                <div class="carousel-inner">
                    {% for key,value in data %}
                        <div class="item {% if key == 0 %} {{ "active" }} {% endif %}">
                            <p>{{ value['main_title'] }}</p>
                            <p>{{ value['main_body'] }}</p>
                            <img src="{{ value['popup_image'] }}" height="248">
                        </div>
                    {% endfor %}
                </div>
                <a class="left carousel-control" href="#myPopupCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myPopupCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>